Import('env')

# Includes and defines specific to Boost.
env.Append(
  CPPDEFINES = [
    ['BOOST_THREAD_BUILD_LIB', '1'],
  ],
  CPPPATH = [
    '$MAIN_DIR/third_party/boost/trunk',
  ],
)

# Build Boost.Thread, needed for CGAL.
if env.Bit('windows'):
  srcs = env.Glob('trunk/libs/thread/src/win32/*.cpp')
else:
  srcs = env.Glob('trunk/libs/thread/src/pthread/*.cpp')
env.ComponentLibrary('boost_thread', srcs, COMPONENT_STATIC = True)
env.Append(LIBS=['boost_thread'])

# Build Boost.date-time.
srcs = env.Glob('trunk/libs/date_time/src/posix_time/*.cpp')
env.ComponentLibrary('boost_date_time', srcs, COMPONENT_STATIC = True)
env.Append(LIBS=['boost_date_time'])
